        </record>

        <record id="discount_tea_fixed_5" model="caffeine_discount.discount">
            <field name="name">Фіксована знижка 5 грн на чай</field>
            <field name="discount_type">fixed</field>
            <field name="value">5</field>
            <field name="start_date">2024-11-01</field>
            <field name="end_date">2024-09-30</field>
            <field name="product_ids" eval="[(4, ref('product_tea'))]"/>
        </record>

        <record id="discount_latte_20_percent" model="caffeine_discount.discount">
            <field name="name">20% знижка на Латте</field>
            <field name="discount_type">percentage</field>
            <field name="value">20</field>
            <field name="start_date">2024-12-01</field>
            <field name="end_date">2024-08-31</field>
            <field name="product_ids" eval="[(4, ref('product_latte'))]"/>
        </record>
    </data>
</odoo>
