<odoo>
    <data noupdate="1">
        <record id="discount_coffee_10_percent" model="caffeine_discount.discount">
            <field name="name">10% знижка на каву</field>
            <field name="discount_type">percentage</field>
            <field name="value">10</field>
            <field name="start_date">2024-11-11</field>
            <field name="end_date">2024-12-31</field>
